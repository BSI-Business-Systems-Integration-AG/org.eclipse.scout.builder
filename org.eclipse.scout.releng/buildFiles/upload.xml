<!--
 Input
  ${buildWorking}/step0 to have the subfolders /plugins /features with all bundle/feature sources in it.
 
 Output
  ${buildWorking}/step1 with two subfolders /plugins /features an all the built bundles and features 
     packed in jar files if requested.
     
     $JAVA_HOME/bin/java \
    	-Dorg.eclipse.update.jarprocessor.pack200=@jre \
    	-cp "$ECLIPSE_LAUNCHER" org.eclipse.core.launcher.Main \
    	-application org.eclipse.update.core.siteOptimizer \
    	-jarProcessor -processAll -repack -outputDir .packed "$srcFile"  
-->

<project name="upload" default="build">
	<property file="build.properties" />
	<taskdef name="custom.removeOldZips" classname="org.eclipse.scout.releng.ant.archive.RemoveOldZipFiles" />

	<target name="clean">
	</target>

	<target name="build">
		<condition property="scoutRepositoryLocation" value="${scoutDownloadLocation}/nightly">
			<equals arg1="N" arg2="${buildType}" />
		</condition>
		<condition property="scoutRepositoryLocation" value="${scoutDownloadLocation}/${versionMajor}.${versionMinor}">
			<or>
				<equals arg1="R" arg2="${buildType}" />
				<equals arg1="S" arg2="${buildType}" />
			</or>
		</condition>
		<condition property="conditionSkipUpload">
			<istrue value="${skipUpload}" />
		</condition>
		<condition property="conditionTestBuild">
			<istrue value="${testBuild}" />
		</condition>
		
		<antcall target="upload" />
	</target>

	<target name="upload" unless="conditionSkipUpload">
		<antcall target="uploadZip" />
		<antcall target="uploadP2" />
	</target>


	<target name="uploadZip">
		<condition property="uploadFolder" value="${scoutRepositoryLocation}/zip_test">
			<istrue value="${testBuild}" />
		</condition>
		<property name="uploadFolder" value="${scoutRepositoryLocation}/zip" />
		
		<property name="zipLocation" location="${uploadFolder}" />
		<mkdir dir="${zipLocation}" />
		<copy todir="${zipLocation}">
			<fileset dir="${buildDataDir}/zip_step2/output">
				<include name="*.zip" />
			</fileset>
		</copy>
		<custom.removeOldZips dir="${zipLocation}" keep="3" />
	</target>

	<target name="uploadP2">
		<condition property="uploadFolder" value="${scoutRepositoryLocation}/update_test">
			<istrue value="${testBuild}" />
		</condition>
		<property name="uploadFolder" value="${scoutRepositoryLocation}/update" />

		<!-- ensure update exists -->
		<mkdir dir="${uploadFolder}" />

		<!-- ensure temp dir exists and is empty -->
		<delete dir="${scoutRepositoryLocation}/update_temp" />
		<mkdir dir="${scoutRepositoryLocation}/update_temp" />

		<antcall target="p2.createBackup" />

		<copy todir="${scoutRepositoryLocation}/update_temp">
			<fileset dir="${buildDataDir}/p2_step4/output">
				<include name="**/**" />
				<exclude name="*.created" />
			</fileset>
		</copy>


		<delete dir="${uploadFolder}" />
		<mkdir dir="${uploadFolder}" />
		<move todir="${uploadFolder}">
			<fileset dir="${scoutRepositoryLocation}/update_temp">
				<include name="**/**" />
			</fileset>
		</move>
		<chmod perm="755" failonerror="false" verbose="true">
			<fileset dir="${uploadFolder}">
				<include name="*.sh" />
			</fileset>
		</chmod>
		<delete dir="${scoutRepositoryLocation}/update_temp" />
	</target>

	<target name="p2.createBackup" if="conditionTestBuild">
		<!-- ensure backup dir exists and is empty -->
		<delete dir="${scoutRepositoryLocation}/.updateBackup" />
		<mkdir dir="${scoutRepositoryLocation}/.updateBackup" />

		<copy todir="${scoutRepositoryLocation}/.updateBackup">
			<fileset dir="${scoutRepositoryLocation}/update">
				<include name="**/**" />
			</fileset>
		</copy>
	</target>
</project>