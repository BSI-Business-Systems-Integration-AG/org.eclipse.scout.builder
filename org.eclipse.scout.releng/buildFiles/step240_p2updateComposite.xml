<!--

	Update the composite updatesite

	The output folder (${buildDataDir}/step230/output) is used by upload.
-->

<project name="step240.p2updateComposite" default="build">
	<property environment="env" />
	<property file="build.properties" />
	<taskdef name="custom.truncateComposite" classname="org.eclipse.scout.releng.ant.p2.TruncateCompositeTask" />

	<target name="clean">
		<delete dir="${buildDataDir}/step240" />
	</target>

	<target name="build">
		<available file="${buildDataDir}/step240/output/composite.created" property="skipStep240" />
		<condition property="conditionNightly"> <equals arg1="N" arg2="${buildType}" /></condition>

		<antcall target="createCompositeRepo" />
		<delete dir="${buildDataDir}/step240/input" failonerror="false" />
	</target>


	<target name="createCompositeRepo" unless="skipStep240">
		<antcall target="clean" />
		<property name="inputFolder" location="${buildDataDir}/step240/input" />
		<property name="outputFolder" location="${buildDataDir}/step240/output" />
		<property name="repository" value="${resultFolder}/update"/>
		<mkdir dir="${inputFolder}" />
		<copy todir="${inputFolder}">
			<fileset dir="${buildDataDir}/step230/output">
				<include name="**/*" />
				<exclude name="*.created" />
			</fileset>
		</copy>
		<copy todir="${outputFolder}/${scoutRepositoryFolder}/${repository}">
			<fileset dir="${inputFolder}">
				<include name="**/*" />
			</fileset>
		</copy>
		<!-- create composite repository-->
		<echo>Creating composite repository</echo>
		<antcall target="downloadExisting"></antcall>
		<unzip src="${outputFolder}/${scoutRepositoryFolder}/compositeArtifacts.jar" dest="${outputFolder}/${scoutRepositoryFolder}"/>
		<unzip src="${outputFolder}/${scoutRepositoryFolder}/compositeContent.jar" dest="${outputFolder}/${scoutRepositoryFolder}"/>
		<antcall target="truncateComposite"></antcall>
		<antcall target="addToCompositeRepository"></antcall>
		<touch file="${outputFolder}/composite.created" />
	</target>

	<target name="truncateComposite" if="conditionNightly">
		<echo>Truncating Nightly Repository</echo>
		<custom.truncateComposite srcFile="${outputFolder}/${scoutRepositoryFolder}/compositeArtifacts.xml" destFile="${outputFolder}/${scoutRepositoryFolder}/compositeArtifacts.xml" size="${nightlyKeepVersions}"/>
		<custom.truncateComposite srcFile="${outputFolder}/${scoutRepositoryFolder}/compositeContent.xml" destFile="${outputFolder}/${scoutRepositoryFolder}/compositeContent.xml" size="${nightlyKeepVersions}"/>
		<zip destfile="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeContent.jar" basedir="${buildDataDir}/step240/output/${scoutRepositoryFolder}/"> <include name="compositeContent.xml"/></zip>
		<zip destfile="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeArtifacts.jar" basedir="${buildDataDir}/step240/output/${scoutRepositoryFolder}/"> <include name="compositeArtifacts.xml"/></zip>
	</target>

	<target name="downloadExisting">
		<get dest="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeArtifacts.jar" src="${repositoryUrl}${scoutRepositoryFolder}/compositeArtifacts.jar" ignoreerrors="true" />
		<get dest="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeContent.jar" src="${repositoryUrl}${scoutRepositoryFolder}/compositeContent.jar" ignoreerrors="true" />
	</target>

	<target name="addToCompositeRepository">
		<property name="mode" value="add"/>
		<java classname="org.eclipse.equinox.launcher.Main" fork="true" failonerror="true">
			<arg line="-application org.eclipse.ant.core.antRunner " />
			<arg line="-buildfile ${relengRootDir}/buildFiles/compositeRepository/createRepo.xml" />
			<arg line="-DrelengRootDir=${relengRootDir}" />
			<arg line="-Djavahome=${env.JAVA_HOME}" />
			<arg line="-DjavacDebugInfo=true" />
			<arg line="-Dlocation=${buildDataDir}/step240/output/${scoutRepositoryFolder}" />
			<arg line="-Drepository=${repository}" />
			<arg line="-Dmode=${mode}" />
			<classpath>
				<fileset dir="${relengRootDir}/working/eclipse/plugins">
					<include name="org.eclipse.equinox.launcher_*.jar" />
				</fileset>
			</classpath>
		</java>
		<zip destfile="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeContent.jar" basedir="${buildDataDir}/step240/output/${scoutRepositoryFolder}/"> <include name="compositeContent.xml"/></zip>
		<zip destfile="${buildDataDir}/step240/output/${scoutRepositoryFolder}/compositeArtifacts.jar" basedir="${buildDataDir}/step240/output/${scoutRepositoryFolder}/"> <include name="compositeArtifacts.xml"/></zip>
		<delete>
			<fileset dir="${buildDataDir}/step240/output/${scoutRepositoryFolder}" ><include name="*.xml"/></fileset>
		</delete>
	</target>
</project>