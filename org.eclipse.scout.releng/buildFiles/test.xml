<project name="test" default="build">

	<property name="skipClean" value="false" />


	<target name="build" depends="abc">

	</target>

	<target name="abc">
		<condition property="conditionSkipClean">
			<or>
				<not>
					<available file="D:/Temp/max24h/eclipseBuild/test/folder" />
				</not>
				<istrue value="${skipClean}"/>
			</or>
		</condition>
		<antcall target="clean">
		</antcall>
	</target>


	<target name="clean" unless="conditionSkipClean">
		<echo message="clean ${conditionSkipClean}">
		</echo>
	</target>

</project>