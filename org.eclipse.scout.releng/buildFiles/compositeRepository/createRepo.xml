<project name="scout.releng.compositeRepository" default="build">
	<property environment="env" />
	<property file="../build.properties" />
	<!--	<property file="./build.properties" /> -->

	<target name="clean">

	</target>

	<target name="build" depends="clean">
		<condition property="conditionAdd">
			<equals arg1="add" arg2="${mode}" />
		</condition>

		<condition property="conditionRemove">
			<equals arg1="remove" arg2="${mode}" />
		</condition>
		<antcall target="add" />
		<antcall target="remove" />
	</target>

	<target name="add" if="conditionAdd">
		<echo message="Addding repository ${repository} to  ${location}"></echo>
		<p2.composite.repository>
			<repository compressed="true" location="${location}" name="Scout"/>
			<add>
				<repository compressed="true" location="${repository}" />
			</add>
		</p2.composite.repository>
	</target>

	<target name="remove" if="conditionRemove">
		<property name="location" value="file:/${relengRootDir}/working/buildData/compositeRepository"/>
		<echo message="Removing repository ${repository} to  ${location}"></echo>
		<p2.composite.repository>
			<repository compressed="true" location="${location}" />
			<remove>
				<repository compressed="true" location="${repository}" />
			</remove>
		</p2.composite.repository>
	</target>

</project>